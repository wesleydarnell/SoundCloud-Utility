{
  "name": "Soundcloud Utility",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Chrome Extension to download soundcloud cover art!",
  "homepage_url": "http://www.soundcloud.com/",
  
  "background": {
    "scripts": ["background.js"],
	"persistent": true
  },
  
  "page_action":	{
	"default_title": "Click to open menu!",
	"default_popup": "popup.html",
	"default_icon": "images/icon.png"
  },
  
  "icons": {
	"16": "images/16.png",
	"48": "images/48.png",
	"128": "images/128.png"
	},
  
  "permissions": [
	"https://www.soundcloud.com/*",
	"activeTab",
	"tabs"
	]
}